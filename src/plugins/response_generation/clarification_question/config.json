{
  "schema": 1,
  "description": "Generate a contextual clarifying question for unclear queries",
  "execution_settings": {
    "default": {
      "max_tokens": 150,
      "temperature": 0.3,
      "top_p": 0.9,
      "presence_penalty": 0.0,
      "frequency_penalty": 0.0
    }
  },
  "input_variables": [
    {
      "name": "user_query",
      "description": "The user's original query",
      "default": "",
      "is_required": true
    },
    {
      "name": "detected_intent",
      "description": "The detected intent from the query",
      "default": ""
    },
    {
      "name": "extracted_entities",
      "description": "Entities extracted from the query",
      "default": ""
    }
  ]
}

